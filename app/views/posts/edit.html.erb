<div class="container page_top">
  <%= form_tag("/posts/#{@post.id}/update", {multipart: true}) do %>
  <h2>題名</h2>
  <input  name="title" value="<%= @post.title %>">
  <h2>本のタイトル</h2>
  <input  name="bookname" value="<%= @post.bookname %>">
  <h2>本文</h2>
  <textarea name="content" rows="8" cols="80" ><%= @post.content %></textarea>
  <h2>概要欄</h2>
  <textarea name="explain" rows="3" cols="80" ><%= @post.explain %></textarea>
  <h2>ジャンル</h2>
  <select name="janl">
　<option value="novel">小説</option>
　<option value="social">社会</option>
　<option value="hobby">趣味</option>
　<option value="business">ビジネス</option>
　<option value="art">アート・エンタメ</option>
　<option value="child">こども</option>
　</select>

  <input type="submit" value="編集を保存する">
  <% end %>
</div>
